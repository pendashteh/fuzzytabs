{
  "manifest_version": 3,
  "name": "Fuzzy Search v1.0",
  "version": "1.0.0",
  "description": "Fuzzy search to quickly find and switch between tabs",
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_title": "Fuzzy Search v1.0"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-tab-finder": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open tab finder"
    }
  }
}
